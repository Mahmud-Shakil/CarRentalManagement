@model CustomerMultipleInsert

<form enctype="multipart/form-data" asp-action="Create" method="post" class="mt-3">
    <div class="modal-header">
        <h5 class="modal-title" id="categoryModalLabel">Add Customer</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row" id="0">
            <div class="col-md-12 mx-auto">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerViewModels[0].FirstName" class="form-label"></label>
                    <input asp-for="CustomerViewModels[0].FirstName" class="form-control" />
                    <span asp-validation-for="CustomerViewModels[0].FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerViewModels[0].LastName" class="form-label"></label>
                    <input asp-for="CustomerViewModels[0].LastName" class="form-control" />
                    <span asp-validation-for="CustomerViewModels[0].LastName" class="text-danger"></span>
                </div>
                <div class="form-group position-relative mb-3">
                    <label asp-for="CustomerViewModels[0].DateOfBirth" class="form-label"></label>
                    <input asp-for="CustomerViewModels[0].DateOfBirth" class="form-control"  />
                    <span asp-validation-for="CustomerViewModels[0].DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerViewModels[0].Email" class="form-label"></label>
                    <input asp-for="CustomerViewModels[0].Email" class="form-control" />
                    <span asp-validation-for="CustomerViewModels[0].Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerViewModels[0].City" class="form-label"></label>
                    <input asp-for="CustomerViewModels[0].City" class="form-control" />
                    <span asp-validation-for="CustomerViewModels[0].City" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerViewModels[0].Address" class="form-label"></label>
                    <input asp-for="CustomerViewModels[0].Address" class="form-control" />
                    <span asp-validation-for="CustomerViewModels[0].Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerViewModels[0].PostCode" class="form-label"></label>
                    <input asp-for="CustomerViewModels[0].PostCode" class="form-control" />
                    <span asp-validation-for="CustomerViewModels[0].PostCode" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerViewModels[0].PhoneNumber" class="form-label"></label>
                    <input asp-for="CustomerViewModels[0].PhoneNumber" class="form-control" />
                    <span asp-validation-for="CustomerViewModels[0].PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerViewModels[0].ImageName" class="form-label mb-3"></label>
                    <img id="_0" src="~/images/noI.jpg" style="height:90px!important; width:auto!important;" class="form-control change_edit mb-3" asp-append-version="true" data-tag="Image" />
                    <input asp-for="CustomerViewModels[0].ImageName" id="ImageName" name="ImageName" class="form-control change_image" type="file" data-tag="_0" onchange="changeImage(this, event)" required />
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <button id="addModelButton" type="button" class="btn btn-info btn-block">Add more Customer</button>
        </div>
        <input id="sl" type="hidden" value="0" />

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</form>
